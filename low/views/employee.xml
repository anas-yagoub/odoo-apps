                </xpath>
                <xpath expr="//label[@for='barcode']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
			</field>
		 </record>

                <!-- inherit list view employee-->
         <record id="view_employee_form_inherited_list" model="ir.ui.view">
             <field name="name">Inherited Form View for employee</field>
             <field name="model">hr.employee</field>
             <field name="inherit_id" ref="hr.view_employee_tree"/>
             <field name="arch" type="xml">
                 <xpath expr="//field[@name='job_id']" position="attributes">
                     <attribute name="invisible">1</attribute>
                 </xpath>
                 <xpath expr="//field[@name='work_email']" position="attributes">
                     <attribute name="invisible">1</attribute>
                 </xpath>
                 <xpath expr="//field[@name='work_phone']" position="after">
                     <field name="work_location"/>
                     <field name="wage"/>
                     <field name="currency_ids"/>
                     <field name="loan"/>
                     <field name="loan_date"/>
                 </xpath>
                 <xpath expr="//tree" position="attributes">
                     <attribute name="decoration-danger">loan !=0</attribute>
                 </xpath>
                 <xpath expr="//tree" position="attributes">
                     <attribute name="decoration-danger">work_location == 'korea' or work_location == 'كوريا'</attribute>
                 </xpath>
             </field>
        </record>
        <record id="view_employee_public_form_inherited_list" model="ir.ui.view">
            <field name="name">Inherited Form View for employee public</field>
            <field name="model">hr.employee.public</field>
            <field name="inherit_id" ref="hr.hr_employee_public_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='job_title']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
        <record id="hr.menu_view_employee_category_form" model="ir.ui.menu" >
            <field name="name"></field>
        </record>
        <record id="hr.menu_config_plan_plan" model="ir.ui.menu" >
            <field name="name"></field>
        </record>
    </data>
</odoo>
