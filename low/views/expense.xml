<odoo>
    <data>
        <!-- inherit menu and change name-->
        <record id="hr_expense.menu_hr_expense_root" model="ir.ui.menu" >
            <field name="name">Payroll</field>
        </record>
        <record id="hr_expense.menu_hr_expense_my_expenses" model="ir.ui.menu" >
            <field name="name">My Payroll</field>
        </record>
        <record id="hr_expense.menu_hr_expense_my_expenses_to_submit" model="ir.ui.menu" >
            <field name="name">My Payroll</field>
        </record>
        <record id="hr_expense.menu_hr_expense_report" model="ir.ui.menu" >
            <field name="name">My Payroll Reports</field>
        </record>
        <record id="hr_expense.menu_hr_expense_sheet_my_reports" model="ir.ui.menu" >
            <field name="name">My Payroll Reports</field>
        </record>
        <record id="hr_expense.menu_hr_expense_all_expenses" model="ir.ui.menu" >
            <field name="name">Payroll Analysis</field>
        </record>
                        <!-- inherit list view expense-->
         <record id="view_expense_form_inherited_list" model="ir.ui.view">
             <field name="name">Inherited Form View for expense</field>
             <field name="model">hr.expense</field>
             <field name="inherit_id" ref="hr_expense.view_expenses_tree"/>
             <field name="arch" type="xml">
                 <xpath expr="//field[@name='analytic_account_id']" position="attributes">
                     <attribute name="invisible">1</attribute>
                 </xpath>
                 <xpath expr="//field[@name='payment_mode']" position="attributes">
                     <attribute name="invisible">1</attribute>
                 </xpath>
                 <xpath expr="//field[@name='analytic_tag_ids']" position="attributes">
                     <attribute name="invisible">1</attribute>
                 </xpath>
                 <xpath expr="//field[@name='total_amount']" position="attributes">
                     <attribute name="total_amount"></attribute>
                 </xpath>
                 <xpath expr="//field[@name='payment_mode']" position="after">
                     <field name="wage"/>
                     <field name="loan"/>
                     <field name="currency_id"/>
                 </xpath>
                 <xpath expr="//tree" position="attributes">
                     <attribute name="decoration-danger">loan != 0 and loan == total_amount</attribute>
                 </xpath>
<!--                 <xpath expr="//field[@name='payment_mode']" position="after">-->
<!--                    <field name="loan"/>-->
<!--                 </xpath>-->
             </field>
         </record>
                   <!-- inherit form view expenses-->
        <record id="hr_expense_view" model="ir.ui.view">
            <field name="name">hr.expense.view</field>
            <field name="model">hr.expense</field>
            <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='quantity']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='product_id']" position="attributes">
                    <attribute name="options">{'no_create_edit':True}</attribute>
                </xpath>
                <xpath expr="//field[@name='product_id']" position="attributes">
                    <attribute name="options">{'no_open': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='quantity']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
<!--                <xpath expr="//field[@name='product_id']" position="attributes">-->
<!--                    <attribute name="invisible">1</attribute>-->
<!--                </xpath>-->
                <xpath expr="//field[@name='employee_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='payment_mode']" position="replace">
                </xpath>
                <xpath expr="//field[@name='analytic_account_id']" position="attributes">
                     <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='analytic_tag_ids']" position="attributes">
                     <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='tax_ids']" position="attributes">
                     <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//label[@for='payment_mode']" position="attributes">
                     <attribute name="invisible">1</attribute>
                </xpath>
<!--                <xpath expr="//filter[@name='no_report']" position="replace"/>-->


                <xpath expr="//field[@name='unit_amount']" position="attributes">
                    <attribute name="string">Amount</attribute>
                </xpath>
                <xpath expr="//field[@name='product_id']" position="attributes">
                    <attribute name="string">Wage Type</attribute>
                </xpath>
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="employee_id"/>
                </xpath>
                <xpath expr="//field[@name='employee_id']" position="after">
                    <field name="wage"/>
                    <field name="loan"/>
                    <field name="currency_ids"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="placeholder"></attribute>
                </xpath>
            </field>
        </record>
        <record id="view_expense_form_inherited_search" model="ir.ui.view">
            <field name="name">Inherited search View for expense</field>
            <field name="model">hr.expense</field>
            <field name="inherit_id" ref="hr_expense.hr_expense_view_search"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='no_report']" position="replace">
                </xpath>
                <xpath expr="//filter[@name='my_expenses']" position="replace">
                </xpath>
            </field>
        </record>

         <record id="view_expense_sheet_form_inherited_list" model="ir.ui.view">
             <field name="name">Inherited Form sheet View for expense</field>
             <field name="model">hr.expense.sheet</field>
             <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form"/>
             <field name="arch" type="xml">
                 <xpath expr="//field[@name='analytic_account_id']" position="attributes">
                     <attribute name="invisible">1</attribute>
                 </xpath>
                 <xpath expr="//field[@name='tax_ids']" position="attributes">
                     <attribute name="invisible">1</attribute>
                 </xpath>
             </field>
         </record>
<!--        <record id="view_product_move_form" model="ir.ui.view">-->
<!--            <field name="name">view.product.view.move.form</field>-->
<!--            <field name="model">product.template</field>-->
<!--            <field name="inherit_id" ref="product.product_template_only_form_view"/>-->
