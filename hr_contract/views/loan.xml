<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
                 <!-- form views model -->
        <record model="ir.ui.view" id="employee_form_view">
            <field name="name">employee.form</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <form string="Employee Form">
                     <group>
                         <field name="loan"/>
                     </group>
                    <group>
                        <field name="loan_date"/>
                    </group>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="employee_list_action">
            <field name="name">employee</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create the first employee
                </p>
            </field>
        </record>
        <menuitem id="employee_list_action" name="Loan" parent="hr.menu_hr_root"
                  action="employee_list_action" sequence="5"/>

    </data>
</odoo>